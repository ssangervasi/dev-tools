#!/usr/bin/env bash

original_branch=$(git symbolic-ref --short HEAD)
original_status=$(git status --porcelain)

if [[ -n "${original_status}" ]]; then
  echo 'Stashing dirty changes'
  git stash push \
    -m "remaster on ${original_branch}" \
    --include-untracked \
    || exit 1
fi

echo 'Pulling master'
git checkout master &&
  git pull &&
  echo "Rebasing ${original_branch} onto master" &&
  git checkout "${original_branch}" &&
  git rebase master

if [[ $? != 0 ]]; then
  echo_error 'Remaster failed!'
  exit 1
fi

if [[ -n "${original_status}" ]]; then
  echo "Restoring stash" &&
  git stash pop
fi
